<!--miniprogram/pages/matching/result/result.wxml-->
<cu-custom bgColor="bg-gradual-orange" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">以伴edu</view>
</cu-custom>
<view class='title'>匹配登记</view>
<view class="line"></view>
<view class='card row' wx:for="{{list}}">
  <view class='coloum info'>
    <view class="row ii">
      <view class="shu"></view>
      <view class="name">{{item.name}}</view>
      <view class="school">{{item.school}}</view>
      <view class="major">{{item.major}}专业</view>
    </view>
    <view class='text'>擅长科目：{{item.subject[0]}}、{{item.subject[1]}}、{{item.subject[2]}}</view>
  </view>
  <image src='../../../images/matching/xuanze.png' class='icon'></image>
</view>