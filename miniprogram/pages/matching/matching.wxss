.checkbox .wx-checkbox-input {
  border-radius: 10rpx; 
  width: 40rpx; 
  height: 40rpx; 
  border:3rpx solid rgba(254, 123, 111, 1);
}
.checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  width: 46rpx; 
  height: 46rpx; 
  border:none;
  background: rgba(254, 123, 111, 1);
}
.checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  border-radius:10rpx; 
  width: 46rpx; 
  height: 46rpx; 
  line-height: 46rpx;
  text-align: center;
  font-size: 35rpx; /* 对勾大小 30rpx */
  color: #fff; /* 对勾颜色 白色 */
  background: rgba(254, 123, 111, 1);
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}
.ii{
