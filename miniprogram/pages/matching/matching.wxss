radio{
  border-radius: 50%;
  height: 36rpx; 
  width: 36rpx;
  border:3rpx solid rgba(254, 123, 111, 1);
}
radio .wx-radio-input{ 
  height: 36rpx; 
  width: 36rpx;
  border-radius: 50%;
  background-color: white;
  border:none;
}
radio .wx-radio-input.wx-radio-input-checked{
  border:none;
}
radio .wx-radio-input.wx-radio-input-checked::before{
  border-radius: 50%;
  width: 28rpx; 
  height: 28rpx;
  background-color: rgba(254, 123, 111, 1);
  font-size:0rpx; /* 对勾大小 去掉 */
  margin-bottom:3rpx ;
}
