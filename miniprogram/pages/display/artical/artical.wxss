/* miniprogram/pages/display/artical/artical.wxss */
.title{
  width: 100%;
	height: 84rpx;
	color: rgba(56, 56, 56, 1);
	font-size: 56rpx;
	line-height: 150%;
  text-align: left;
  margin-left:35rpx ;
  margin-top:30rpx ;
  margin-bottom:30rpx ;
}
.artical{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.card{
  width: 100%;
	height: 208rpx;
	color: rgba(80, 80, 80, 1);
	background-color: rgba(255, 255, 255, 1);
	font-size: 28rpx;
	line-height: 150%;
  text-align: center;
  margin-bottom:30rpx ;
}
.top{
  width: 95%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left:40rpx ;
  margin-top:30rpx ;
}
.bottom{
  width: 95%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left:40rpx ;
  margin-top:5rpx ;
}
.icon{
  width: 35rpx;
	height: 35rpx;
	font-size: 30rpx;
	color: rgba(128, 128, 128, 1);
}
.icon1{
  width: 24rpx;
	height: 24rpx;
	font-size: 24rpx;
  color: rgba(128, 128, 128, 1);
  margin-right:6rpx;
}
.img{
  width: 120rpx;
  height: 120rpx;
  margin-top:5rpx ;
}
.text{
  width: 75%;
  height: 118rpx;
  margin-right: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: left;
}
.text-title{
  width: 100%;
	height: 48rpx;
	color: rgba(80, 80, 80, 1);
	font-size: 32rpx;
	line-height: 150%;
	text-align: left;
	font-weight: bold;
}
.text-abstract{
  width: 100%;
	height: 70rpx;
	color: rgba(166, 166, 166, 1);
	font-size: 24rpx;
	line-height: 150%;
  text-align: left;
  margin-top:8rpx ;
}
.num{
  width:118rpx;
	color: rgba(128, 128, 128, 1);
	font-size: 22rpx;
	line-height: 150%;
  text-align: left;
  margin-top:5rpx ;
  margin-left:2rpx ;
}
.time{
  width: 200rpx;
	height: 36rpx;
	color: rgba(166, 166, 166, 1);
	font-size: 22rpx;
	line-height: 150%;
  text-align: right;
  margin-left:35rpx ;
  margin-top:5rpx ;
}
