<!--miniprogram/pages/manager/manager.wxml-->
<cu-custom bgColor="bg-gradual-orange" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">以伴edu</view>
</cu-custom>
<view class="title">管理后台</view>
<view class='title-bottom'>管理员可在这里对用户的评论进行审核、查看以伴所有网校的情况以及手动对学生与志愿者进行匹配。</view>
<!--待审核评论-->
<navigator url="./reviewComments/reviewComments" hover-class="none">
  <view class='card' style="background-image: linear-gradient( 90deg, #FFAA85 10%, #B3315F 100%);">
    <view class='text'>
      <view class="text-title">待审核评论</view>
      <view class='text-titlebottom'>为避免用户发表不当言论，审核需谨慎哦</view>
    </view>
    <image src='../../images/manager/pinglun.png' class='img'></image>
  </view>
</navigator>
<!--已审核评论-->
<navigator url="./reviewed/reviewed" hover-class="none">
  <view class='card' style="background-image: linear-gradient( 90deg, #f0d629 10%, #5e3b0e 100%);">
    <view class='text'>
      <view class="text-title">已审核评论</view>
      <view class='text-titlebottom'>如评论审核错误，可在此撤回审核结果哦</view>
    </view>
    <image src='../../images/manager/yishenhe.svg' class='img'></image>
  </view>
</navigator>
<!--网校信息查看-->
<view bindtap="jump" data-url="./viewSchool/viewSchool" hover-class="none">
  <view class='card' style="background-image: linear-gradient( 90deg, #fdbb2d 10%, #b21f1f 100%);">
    <view class='text'>
      <view class="text-title">网校信息情况</view>
      <view class='text-titlebottom'>这里可以查看网校及其志愿者与学生的信息哦</view>
    </view>
    <image src='../../images/manager/cz-qkjc.png' class='img'></image>
  </view>
</view>
<!--爱心大使信息查看-->
<view bindtap="jump" data-url="./viewSchool/viewSchool" hover-class="none">
  <view class='card' style="background-image: linear-gradient( 90deg, #91eae4 10%,  #7f7fd5 100%);">
    <view class='text'>
      <view class="text-title">爱心大使信息</view>
      <view class='text-titlebottom'>这里可以查看爱心大使及其邀请的学生信息哦</view>
    </view>
    <image src='../../images/manager/chakanbeimian.png' class='img'></image>
  </view>
</view>
<!--手动进行匹配-->
<view bindtap="jump" data-url="./manualMatching/manualMatching" hover-class="none">
  <view class='card' style="background-image: linear-gradient( 90deg, #97ABFF 10%, #123597 100%);">
    <view class='text'>
      <view class="text-title">手动进行匹配</view>
      <view class='text-titlebottom'>这里可以手动对学生与志愿者进行匹配哦</view>
    </view>
    <image src='../../images/manager/pipeifangshi.png' class='img'></image>
  </view>
</view>
<view class='bot'></view>