.three-nav{
	width: 95%;
	-webkit-tap-highlight-color:rgba(0,0,0,0);
  margin-top:48rpx ;
  margin-left:20rpx ;
}

.three-nav .item-nav{
	position: relative;
	padding-right: 32rpx;
	color: rgba(80, 80, 80, 1);
	font-size: 28rpx;
	cursor: pointer;
	display: inline-block
}
.three-nav .active{
	height: 60rpx;
	color: rgba(80, 80, 80, 1);
	font-size: 34rpx;
	line-height: 150%;
	text-align: left;
	font-weight: bold;
}
.three-nav .active::after{
	content:'';
	position: absolute;
	left: 0rpx;
	right: 50rpx;
	height:0;
	bottom: 8rpx;
	margin-bottom: 20rpx;
}
 .swiper-box {
	display: block;
	height: 100%;
