/* miniprogram/pages/decompress/heart/community/community.wxss */
page{
  background: linear-gradient(90deg, #ffbd92, #fd6b67);
}
.title{
  width: 224rpx;
	height: 84rpx;
	color: rgba(80, 80, 80, 1);
	font-size: 56rpx;
	line-height: 150%;
	text-align: left;
  font-weight: bold;
  margin-top: 40rpx;
  margin-left:35rpx ;
  margin-bottom:40rpx ;
}
.body{
  width: 90%;
  display: flex;
  flex-direction: column;
  align-items: left;
  margin-left: 35rpx;
}
.card{
  margin-bottom:40rpx ;
  display: flex;
  flex-direction: column;
  align-items:center;
}
.card-item{
  width: 686rpx;
	height: 138rpx;
	color: rgba(80, 80, 80, 1);
	background-color: rgba(255, 255, 255, 1);
	border-radius: 12rpx;
	font-size: 28rpx;
	line-height: 150%;
	box-shadow: 0rpx 7rpx 14rpx 0rpx rgba(0, 0, 0, 0.12);
  text-align: center;
  display: flex;
  flex-direction: row;
  align-items:center;
  z-index:2;
}
.icon{
  width: 60rpx;
  height: 60rpx;
  margin-left:35rpx ;
}
.text{
  display: flex;
  flex-direction: column;
  align-items:left;
  justify-content: center;
  margin-left:30rpx ;
}
.card-title{
  width:100%;
	height: 42rpx;
	color: rgba(80, 80, 80, 1);
	font-size: 28rpx;
	line-height: 150%;
	text-align: left;
	font-weight: bold;
}
.card-introduce{
  width: 100%;
	height: 36rpx;
	color: rgba(128, 128, 128, 1);
	font-size: 24rpx;
	line-height: 150%;
  text-align: left;
  margin-top:8rpx ;
}
.open{
  width: 642rpx;
	height: 424rpx;
	color: rgba(80, 80, 80, 1);
	background-color: rgba(255, 255, 255, 1);
  border-bottom-left-radius:12rpx;
  border-bottom-right-radius:12rpx;
	font-size: 28rpx;
	line-height: 150%;
	box-shadow: 0rpx 7rpx 14rpx 0rpx rgba(0, 0, 0, 0.12);
  text-align: center;
  z-index:1;
}
.close{
  width: 642rpx;
	height: 30rpx;
	color: rgba(80, 80, 80, 1);
	background-color: rgba(255, 255, 255, 1);
  border-bottom-left-radius:12rpx;
  border-bottom-right-radius:12rpx;
	font-size: 28rpx;
	line-height: 150%;
	box-shadow: 0rpx 7rpx 14rpx 0rpx rgba(0, 0, 0, 0.12);
  text-align: center;
  z-index:1;
}
.QR{
  width: 339rpx;
  height: 339rpx;
  margin-top:40rpx ;
}
